{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch LarouexComponents Demo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-demo",
            "program": "${workspaceFolder}/Demo/bin/Debug/net8.0/LarouexComponents.Demo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Demo",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch LarouexComponents Demo (No Browser)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-demo",
            "program": "${workspaceFolder}/Demo/bin/Debug/net8.0/LarouexComponents.Demo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Demo",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to LarouexComponents Demo",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
