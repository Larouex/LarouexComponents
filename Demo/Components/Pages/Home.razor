@page "/"
@using LarouexSoftwareDevelopment.LarouexComponents

<PageTitle>LarouexComponents Demo</PageTitle>

<div class="container">
    <h1>ðŸš€ LarouexComponents Demo</h1>
    <p class="lead">Interactive demo of all available components in the LarouexComponents library.</p>

    <div class="demo-section">
        <h2>BrandingText Component</h2>
        <p>The BrandingText component displays branded text with various styling options.</p>

        <h3>Default Usage</h3>
        <div class="component-example">
            <BrandingText Text="Welcome to Larouex Software Development" />
        </div>
        <div class="code-block">
            &lt;BrandingText Text="Welcome to Larouex Software Development" /&gt;
        </div>

        <h3>Size Variations</h3>
        <div class="component-example">
            <BrandingText Text="Small Text" Size="ComponentSize.Small" />
            <BrandingText Text="Normal Text" Size="ComponentSize.Medium" />
            <BrandingText Text="Large Text" Size="ComponentSize.Large" />
        </div>
        <div class="code-block">
            &lt;BrandingText Text="Small Text" Size="ComponentSize.Small" /&gt;<br />
            &lt;BrandingText Text="Normal Text" Size="ComponentSize.Medium" /&gt;<br />
            &lt;BrandingText Text="Large Text" Size="ComponentSize.Large" /&gt;
        </div>

        <h3>Theme Variations</h3>
        <div class="component-example">
            <BrandingText Text="Primary Theme" Theme="ComponentTheme.Primary" />
            <BrandingText Text="Success Theme" Theme="ComponentTheme.Success" />
            <BrandingText Text="Warning Theme" Theme="ComponentTheme.Warning" />
            <BrandingText Text="Danger Theme" Theme="ComponentTheme.Danger" />
            <BrandingText Text="Secondary Theme" Theme="ComponentTheme.Secondary" />
        </div>
        <div class="code-block">
            &lt;BrandingText Text="Primary Theme" Theme="ComponentTheme.Primary" /&gt;<br />
            &lt;BrandingText Text="Success Theme" Theme="ComponentTheme.Success" /&gt;<br />
            &lt;BrandingText Text="Warning Theme" Theme="ComponentTheme.Warning" /&gt;<br />
            &lt;BrandingText Text="Danger Theme" Theme="ComponentTheme.Danger" /&gt;<br />
            &lt;BrandingText Text="Secondary Theme" Theme="ComponentTheme.Secondary" /&gt;
        </div>

        <h3>Combined Variations</h3>
        <div class="component-example">
            <BrandingText Text="Large Success Text" Size="ComponentSize.Large" Theme="ComponentTheme.Success" />
            <BrandingText Text="Small Warning Text" Size="ComponentSize.Small" Theme="ComponentTheme.Warning" />
        </div>
        <div class="code-block">
            &lt;BrandingText Text="Large Success Text" Size="ComponentSize.Large" Theme="ComponentTheme.Success" /&gt;<br />
            &lt;BrandingText Text="Small Warning Text" Size="ComponentSize.Small" Theme="ComponentTheme.Warning" /&gt;
        </div>
    </div>

    <div class="demo-section">
        <h2>Interactive Testing</h2>
        <p>Use the controls below to test different configurations:</p>
        
        <div class="form-group">
            <label for="textInput">Text:</label>
            <input @bind="demoText" id="textInput" class="form-control" />
        </div>
        
        <div class="form-group">
            <label for="sizeSelect">Size:</label>
            <select @bind="demoSize" id="sizeSelect" class="form-control">
                <option value="@ComponentSize.Small">Small</option>
                <option value="@ComponentSize.Medium">Medium</option>
                <option value="@ComponentSize.Large">Large</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="themeSelect">Theme:</label>
            <select @bind="demoTheme" id="themeSelect" class="form-control">
                <option value="@ComponentTheme.Primary">Primary</option>
                <option value="@ComponentTheme.Secondary">Secondary</option>
                <option value="@ComponentTheme.Success">Success</option>
                <option value="@ComponentTheme.Warning">Warning</option>
                <option value="@ComponentTheme.Danger">Danger</option>
            </select>
        </div>

        <h3>Live Preview</h3>
        <div class="component-example">
            <BrandingText Text="@demoText" Size="@demoSize" Theme="@demoTheme" />
        </div>
    </div>
</div>

@code {
    private string demoText = "Live Demo Text";
    private ComponentSize demoSize = ComponentSize.Medium;
    private ComponentTheme demoTheme = ComponentTheme.Primary;
}

